# Environment
JANUA_ENV=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/janua

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_ISSUER=https://api.janua.dev
JWT_AUDIENCE=janua.dev

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3002","https://janua.dev","https://app.janua.dev","https://admin.janua.dev"]

# Email (Resend)
EMAIL_PROVIDER=resend  # console | resend | ses | sendgrid
EMAIL_FROM=noreply@janua.dev
RESEND_API_KEY=re_xxxxxxxxxxxx

# Internal API (service-to-service communication for MADFAM apps)
INTERNAL_API_KEY=your-internal-api-key-here

# Security
TURNSTILE_SECRET=your-turnstile-secret
COOKIE_DOMAIN=.janua.dev
SECURE_COOKIES=false  # true in production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json | text

# ============================================
# OAuth Providers
# ============================================
# Configure the providers you want to enable.
# Get credentials from each provider's developer console.

# Google OAuth
# Console: https://console.cloud.google.com/apis/credentials
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Console: https://github.com/settings/developers
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# Microsoft OAuth (Azure AD)
# Console: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=
OAUTH_MICROSOFT_TENANT_ID=common  # common, organizations, consumers, or specific tenant ID

# Apple Sign In
# Console: https://developer.apple.com/account/resources/identifiers
OAUTH_APPLE_CLIENT_ID=  # Services ID (e.g., com.madfam.janua.signin)
OAUTH_APPLE_TEAM_ID=    # Apple Developer Team ID
OAUTH_APPLE_KEY_ID=     # Sign In with Apple Key ID
OAUTH_APPLE_PRIVATE_KEY=  # Private key in PEM format (use \n for newlines or base64 encode)

# Discord OAuth
# Console: https://discord.com/developers/applications
OAUTH_DISCORD_CLIENT_ID=
OAUTH_DISCORD_CLIENT_SECRET=

# Twitter/X OAuth 2.0
# Console: https://developer.twitter.com/en/portal/projects
OAUTH_TWITTER_CLIENT_ID=
OAUTH_TWITTER_CLIENT_SECRET=

# LinkedIn OAuth
# Console: https://www.linkedin.com/developers/apps
OAUTH_LINKEDIN_CLIENT_ID=
OAUTH_LINKEDIN_CLIENT_SECRET=

# Slack OAuth
# Console: https://api.slack.com/apps
OAUTH_SLACK_CLIENT_ID=
OAUTH_SLACK_CLIENT_SECRET=
