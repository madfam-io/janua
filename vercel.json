{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "yarn workspace @plinto/marketing build",
  "installCommand": "yarn install --frozen-lockfile",
  "outputDirectory": "apps/marketing/.next",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": false
    }
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./apps/marketing/",
  "functions": {
    "apps/marketing/app/api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}