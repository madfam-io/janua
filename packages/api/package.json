{
  "name": "@plinto/api",
  "version": "1.0.0",
  "description": "Plinto REST API server with Express.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
