    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@plinto/core": "workspace:*",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "speakeasy": "^2.0.0",
    "@simplewebauthn/server": "^8.3.6",
    "multer": "^1.4.5-lts.1",
