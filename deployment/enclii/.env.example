# Janua Production Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://janua:YOUR_POSTGRES_PASSWORD@localhost:5432/janua
POSTGRES_DB=janua
POSTGRES_USER=janua
POSTGRES_PASSWORD=YOUR_SECURE_POSTGRES_PASSWORD

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@localhost:6379/0
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD

# =============================================================================
# Security Keys
# =============================================================================
# JWT Secret Key - Generate with: openssl rand -hex 64
JWT_SECRET_KEY=YOUR_64_CHAR_HEX_SECRET

# Application Secret Key - Generate with: openssl rand -hex 32
SECRET_KEY=YOUR_32_CHAR_HEX_SECRET

# Internal API Key for service-to-service communication
INTERNAL_API_KEY=YOUR_INTERNAL_API_KEY

# =============================================================================
# Email Configuration (choose one provider)
# =============================================================================
# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Resend (MADFAM centralized email)
RESEND_API_KEY=re_your_resend_api_key

# =============================================================================
# Monitoring (optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Grafana admin password
GRAFANA_PASSWORD=YOUR_GRAFANA_ADMIN_PASSWORD
